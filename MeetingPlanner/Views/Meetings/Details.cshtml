@using System.Globalization
@using Microsoft.CodeAnalysis.CSharp.Syntax
@model MeetingPlanner.Models.Meeting

@{
    ViewData["Title"] = "Meeting Details";
}

<div class="card w-100 p-3">
        <h1 class="card-header text-white bg-info">Meeting Details for @Html.DisplayFor(model => model.Date)</h1>
        <ul class="list-group list-group-flush">
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.Presiding)</h4>
                <span>@Html.DisplayFor(model => model.Presiding)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.Conducting)</h4>
                <span>@Html.DisplayFor(model => model.Conducting)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.OpenHymnTitle)</h4>
                <span>@Html.DisplayFor(model => model.OpenHymnTitle)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.OpeningPrayer)</h4>
                <span>@Html.DisplayFor(model => model.OpeningPrayer)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.SacramentHymnTitle)</h4>
                <span>@Html.DisplayFor(model => model.SacramentHymnTitle)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">Presentations</h4>@foreach (var item in Model.Assignments)
                {
                    <ul>
                        <li>
                            <strong>
                                @Html.DisplayFor(modela => item.Person.FirstName)
                                @Html.DisplayFor(modela => item.Person.LastName)
                            </strong>
                            <br />
                            @Html.DisplayFor(modela => item.Type)<span>-</span>
                            @Html.DisplayFor(modela => item.Title)

                        </li>
                    </ul>
                }
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.ClosingHymnTitle)</h4>
                <span>@Html.DisplayFor(model => model.ClosingHymnTitle)</span>
            </li>
            <li class="list-group-item">
                <h4 class="text-info">@Html.DisplayNameFor(model => model.ClosingPrayer)</h4>
                <span>@Html.DisplayFor(model => model.ClosingPrayer)</span>
            </li>
        </ul>
        <div class="card-body">
            <button class="card-link btn btn-success" onclick="window.print()">Print</button>
            <a class="card-link btn btn-info" asp-action="Edit" asp-route-id="@Model.ID">Edit</a>
            <a class="card-link btn btn-secondary" asp-action="Index">Back to List</a>
        </div>
    </div>

