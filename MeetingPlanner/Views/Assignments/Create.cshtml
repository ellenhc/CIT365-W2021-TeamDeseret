@model MeetingPlanner.Models.Assignment

@{
    ViewData["Title"] = "New Assignment";
}

<h4>Create A New Assignment</h4>
    <div class="">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="MeetingID" class="control-label font-weight-bold"></label>
                <select asp-for="MeetingID" class="form-control" asp-items="ViewBag.MeetingID">
                    <option value="">Select a meeting</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label font-weight-bold"></label>
                <select asp-for="PersonID" class="form-control" asp-items="ViewBag.PersonID">
                    <option value="">Select a person</option>
                </select>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label font-weight-bold"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<AssignmentType>()">
                    <option value="">Assignment type</option>
                </select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label font-weight-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddInfo" class="control-label font-weight-bold"></label>
                <input asp-for="AddInfo" class="form-control" />
                <span asp-validation-for="AddInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowOrder" class="control-label font-weight-bold"></label>
                <input asp-for="ShowOrder" class="form-control" />
                <span asp-validation-for="ShowOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
