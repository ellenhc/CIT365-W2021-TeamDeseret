@model MeetingPlanner.Models.Assignment

@{
    ViewData["Title"] = "Edit";
}

<h4>Edit Assignment</h4>
<hr />
    <div class="">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="ID" />
            <div class="form-group">
                <label asp-for="MeetingID" class="control-label font-weight-bold"></label>
                <select asp-for="MeetingID" class="form-control" asp-items="ViewBag.MeetingID"></select>
                <span asp-validation-for="MeetingID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PersonID" class="control-label font-weight-bold"></label>
                <select asp-for="PersonID" class="form-control" asp-items="ViewBag.PersonID"></select>
                <span asp-validation-for="PersonID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Type" class="control-label font-weight-bold"></label>
                <select asp-for="Type" class="form-control" asp-items="Html.GetEnumSelectList<AssignmentType>()"></select>
                <span asp-validation-for="Type" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Title" class="control-label font-weight-bold"></label>
                <input asp-for="Title" class="form-control" />
                <span asp-validation-for="Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AddInfo" class="control-label font-weight-bold"></label>
                <input asp-for="AddInfo" class="form-control" />
                <span asp-validation-for="AddInfo" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ShowOrder" class="control-label font-weight-bold"></label>
                <input asp-for="ShowOrder" class="form-control" />
                <span asp-validation-for="ShowOrder" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-success" />
                <a class="btn btn-secondary" asp-action="Index">Back to List</a>
            </div>
        </form>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
